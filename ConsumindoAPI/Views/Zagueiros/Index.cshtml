@model IEnumerable<ConsumindoAPI.Models.AtletaViewModel>

@{
    ViewBag.Title = "Zagueiros";
}

<h2>Zagueiros</h2>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_clube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.jogos_num)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.media)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.intervaloMedioSemSofrerGol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mediaRB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mediaPE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.apelido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome_clube)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.jogos_num)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.media)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.intervaloMedioSemSofrerGol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mediaRB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mediaPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status_id)
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

        $('#myTable').dataTable({
            "lengthMenu": [[-1, 10, 25, 50], ["All", 10, 25, 50]],
            "order": [[3, "desc"]]
        });
    </script>
}